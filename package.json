{
  "name": "plumejs-webpack-template",
  "version": "1.0.0",
  "description": "PlumeJS template with webpack bundler",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "rimraf dist && webpack serve --config webpack/server.config.js",
    "build": "rimraf dist && webpack --config webpack/build.config.js",
    "test": "vitest run --coverage",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "lint:ci": "rimraf eslint-report.json && eslint src --format json -o eslint-report.json || find eslint-report.json"
  },
  "dependencies": {
    "@plumejs/core": "^4.2.0",
    "@plumejs/testing": "^4.1.3",
    "dotenv": "^16.4.5",
    "ts-loader": "^9.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@vitest/coverage-istanbul": "2.1.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.12.0",
    "globals": "^15.10.0",
    "happy-dom": "^15.7.4",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sass": "^1.79.4",
    "sass-loader": "^16.0.2",
    "style-loader": "^4.0.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.1",
    "url-loader": "^4.1.1",
    "vitest": "^2.1.2",
    "webpack": "^5.95.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0",
    "webpack-merge": "^6.0.1"
  }
}
